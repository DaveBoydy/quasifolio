{
	"$schema": "https://schemas.wp.org/wp/6.3/theme.json",
	"customTemplates": [
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#404040",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#e0e0e0",
					"name": "Neutral",
					"slug": "neutral"
				}
			]
		},
		"layout": {
			"contentSize": "800px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"size": "1rem",
					"slug": "small"
				},
				{
					"fluid": {
						"max": "1.125rem",
						"min": "1rem"
					},
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"max": "2.25rem",
						"min": "2rem"
					},
					"size": "2.25rem",
					"slug": "large"
				},
				{
					"fluid": {
						"max": "2.75rem",
						"min": "2rem"
					},
					"size": "2.75rem",
					"slug": "x-large"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/paragraph": {
				"css": "max-width: 75ch;",
				"spacing": {
					"margin": {
						"top": "2rem"
					}
				}
			},
			"core/post-content": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/post-excerpt": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--black)"
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				},
				"typography": {
					"fontStyle": "normal",
					"fontWeight": "700"
				}
			},
			"core/query-pagination": {
				"color": {
					"text": "var(--wp--preset--color--vivid-red)"
				},
				"elements": {
					"link": {
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--vivid-red)"
							}
						},
						"color": {
							"text": "var(--wp--preset--color--black)"
						}
					}
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--black)"
							}
						},
						"color": {
							"text": "var(--wp--preset--color--black)"
						},
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"css": ".wp-block-button__link, .wp-block-search__button { border: 2px solid transparent; background-color: var(--wp--preset--color--black); color: var(--wp--preset--color--white); } .wp-block-button__link:hover, .wp-block-search__button:hover { border: 2px solid var(--wp--preset--color--black); background-color: var(--wp--preset--color--white); color: var(--wp--preset--color--black); } .wp-block-button.is-style-outline .wp-block-button__link:hover { background-color: var(--wp--preset--color--black); color: var(--wp--preset--color--white); }",
		"elements": {
			"button": {
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--white)"
					}
				},
				"color": {
					"background": "var(--wp--preset--color--black)",
					"text": "var(--wp--preset--color--white)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--black)"
				}
			},
			"link": {
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--vivid-red)"
				}
			}
		},
		"spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"left": "clamp(1rem, 3.5vw, 2rem)",
				"right": "clamp(1rem, 3.5vw, 2rem)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--small)",
			"letterSpacing": "calc(1rem * 0.12)",
			"lineHeight": "1.5"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"version": 2
}